Bootstrap: docker
From: continuumio/miniconda3

%labels
    authors Bayram Boukhari

%environment
    PATH /Bracken:$PATH

%post
    apt-get update --fix-missing

%files
    environment.yaml

%runscript
    conda env update -n root -f environment.yaml
    conda clean -afy
    pip install git+https://github.com/exels/MultiQC.git
    exec /bin/bash